{
    "manifestVersion": 1,
    "id": "SecurityPipelineDecorator",
    "name": "Automatic Credential Scanning",
    "version": "0.0.0.9",
    "publisher": "CSE-DevOps-Team6",
    "targets": [
        {
            "id": "Microsoft.VisualStudio.Services"
        }
    ],    
    "description": "Organizational Pipeline Decorator to enforce credential scanning on all pipelines.",
    "categories": [
        "Azure Pipelines"
    ],
    "icons": {
        "default": "images/extension-icon.png"        
    },
    "contributions": [
        {
            "id": "Credential-Scanning-Task",
            "type": "ms.azure-pipelines.pipeline-decorator",
            "targets": [
                "ms.azure-pipelines-agent-job.pre-job-tasks"
            ],
            "properties": {
                "template": "securitydecorator/sec-decorator-filter.yml"
            }
        }
    ],
     "files": [
        {
            "path": "securitydecorator/sec-decorator-filter.yml",
            "addressable": true,
            "contentType": "text/plain"
        }
    ]
}
